events {
    worker_connections 1024;
}

http {
    upstream nextjs {
        server nextjs:3000;
    }

    server {
        listen 80;
        server_name marsonoid.ru;

        # Для Certbot
        location /.well-known/acme-challenge/ {
            root /etc/nginx/conf.d;
        }

        # Редирект на HTTPS
        location / {
            return 301 https://$host$request_uri;
        }
    }
}